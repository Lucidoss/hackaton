{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}
{% block body %}
	<link rel="stylesheet" href="{{asset('style.css')}}">
	<link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
	<link rel="icon" type="image/x-icon" href="{{asset('images/logo.png')}}">
	<script src="https://kit.fontawesome.com/a076d05399.js"></script>
	<input type="checkbox" id="active">
	<label for="active" class="menu-btn">
		<span></span>
	</label>
	<label for="active" class="close"></label>
	<div class="wrapper">
		<ul>
			<li><a href="{{ path('app_accueil') }}">Accueil</a></li>
			<li><a href="{{ path('app_presentation') }}">Presentation</a></li>
			<li><a href="{{ path('app_hackathon') }}">Hackathons</a></li>
			<div class="alignement" style="display: table;">
			
			
			{% if is_granted('IS_AUTHENTICATED_FULLY') %}
				<li style="padding-left:200px"><a  href="{{ path('app_logout') }}"><img src="{{ asset('images/deconnexion.png') }}" style="width:50px"></a></li>
				<li><a href="{{ path('app_profile') }}"><img src="{{ asset('images/connexion.png') }}" style="width:50px"></a></li>
			{% else %}
				<li><a href="{{ path('app_login') }}"><img src="{{ asset('images/connexion.png') }}" style="width:50px"></a></li>
			{% endif %}
			
			</div>
		</ul>
	</div>
	<div class="content">
		<div class="title">
			Bienvenue sur Hackat'Agence
		</div>
	</br>
	{% if not is_granted('IS_AUTHENTICATED_FULLY') %}
		<center>
			<a href="/inscription/inscrire" style="text-decoration: none">
				<div class="btn from-center">
					<p>
						S'inscrire
					</p>
				</div>
			</a>
		</center>
		</br>
		<a href="{{ path('app_login') }}">
			<button class="button-81" role="button">
				<p style="font-size : 20px">
					Déjà membre ? Connecter vous ici !
				</p>
			</button>
		</a>
	{% else %}
		<center>
			<a href="{{ path('app_hackathon') }}" style="text-decoration: none">
				<div class="btn from-center">
					<p>
						Hackathons
					</p>
				</div>
			</a>
		</center>
	{% endif %}
	</div>
{% endblock %}
